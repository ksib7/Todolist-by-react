{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "development",
    "watch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strictBindCallApply": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false
  }
}
